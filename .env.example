# Telegram Bot Token (required)
TELEGRAM_TOKEN="your_telegram_bot_token_here"

# Google Sheets Credentials (required, as a single-line JSON string)
GSPREAD_CREDENTIALS='{"type": "service_account", "project_id": "your-project-id", ...}'

# Google Spreadsheet Name (required)
SPREADSHEET_NAME="Catatan Keuangan"

# Allowed Telegram User ID (required)
ALLOWED_USER_ID="your_telegram_user_id_here"

# Port for the web server (optional, defaults to 5000)
PORT=5000
